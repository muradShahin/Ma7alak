<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/itemsRowW"
    android:layout_height="200dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemsRowW"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/material_blue_grey_95"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/storeImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xHeightEditText"
        android:layout_margin="6dp"
        app:cardElevation="6dp">

        <TextView
            android:id="@+id/storeName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/aspergit_bold"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/material_blue_grey_95"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>