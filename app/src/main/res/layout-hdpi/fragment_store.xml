<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/noAccLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.145">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/lowHeight"
                    android:layout_height="@dimen/lowHeight"
                    android:layout_gravity="center"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/app_icon"  />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/login_font"
                    android:gravity="center"
                    android:text="@string/noAccountStr"

                    android:textColor="#42a5f4"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/errorCreateAcc"
                    android:layout_width="@dimen/xxxWidthEditText"
                    android:layout_height="@dimen/heightBtn"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_selector"
                    android:text="@string/CreateOneStr"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/createAstore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/xxxHeighTextWidth"
                    android:layout_height="@dimen/xxxHeighTextWidth"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:id="@+id/storeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        app:srcCompat="@drawable/ic_upload"
                        tools:ignore="VectorDrawableCompat" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="@string/uploadPic1Str"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/xxxWidthEditText"
                    android:layout_height="@dimen/xHeightEditText"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="10dp"

                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/storename"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            app:srcCompat="@drawable/ic_store_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                        <EditText
                            android:id="@+id/storeName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:ems="10"
                            android:hint="@string/store_name"
                            android:inputType="textPersonName"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/xxxWidthEditText"
                    android:layout_height="@dimen/xHeightEditText"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="10dp"

                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/userImage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            app:srcCompat="@drawable/ic_email_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                        <EditText
                            android:id="@+id/mail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:ems="10"
                            android:hint="E-mail"
                            android:inputType="textEmailAddress"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/xxxWidthEditText"
                    android:layout_height="@dimen/xHeightEditText"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            app:srcCompat="@drawable/ic_phone_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:ems="10"
                            android:hint="Phone number"
                            android:inputType="phone"
                            android:textSize="12sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/xxxWidthEditText"
                    android:layout_height="@dimen/xHeightEditText"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            app:srcCompat="@drawable/ic_location_on_black_24dp"
                            tools:ignore="VectorDrawableCompat" />

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:hint="@string/storeLocationstr" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/xxxWidthEditText"
                    android:layout_height="@dimen/xHeightEditText"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            app:srcCompat="@drawable/ic_baseline_category_24"
                            tools:ignore="VectorDrawableCompat" />

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/categoryEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:hint="@string/category" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/createStoreButton"
                    android:layout_width="@dimen/LinearLayInCardxxH_width"
                    android:layout_height="@dimen/xHeightEditText"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_selector"
                    android:text="@string/createAstoreStr"
                    android:textAllCaps="false"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/storeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xxxHeighTextWidth">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/messagesCard"
                        android:layout_width="@dimen/editTextHeightLow"
                        android:layout_height="@dimen/editTextHeightLow"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="@color/material_blue_grey_95"
                        app:cardCornerRadius="17.5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/notifCard"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                app:cardBackgroundColor="@color/quantum_googred"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:id="@+id/numberOfNotif"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="2dp"
                                    android:fontFamily="@font/login_font"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/ic_chat"
                                tools:ignore="VectorDrawableCompat" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/nav_headerCardH_W"
                        android:background="@drawable/nav_back"
                        android:orientation="vertical">

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_normal"
                        android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_normal"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="100dp"
                        android:layout_marginRight="100dp">

                        <ImageView
                            android:id="@+id/storeImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="6dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/storeN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="70dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/aspergit_bold"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/com_smart_login_code"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/ic_add_circle_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/inventoryCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightBtn"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_inventory"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/aspergit_bold"
                            android:gravity="center"
                            android:text="@string/InventStr"
                            android:textColor="#ffc107"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_next"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ordersCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightBtn"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewReq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_order"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textViewReq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/aspergit_bold"
                            android:gravity="center"
                            android:text="@string/orderStr"
                            android:textColor="#ffc107"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/reqNext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_next"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/reviewsCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightBtn"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewReviews"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_customer"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textViewReviews"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/aspergit_bold"
                            android:gravity="center"
                            android:text="@string/reviewStr"
                            android:textColor="#ffc107"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/reviewsNext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_next"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/locationCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightBtn"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_location"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/textViewLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/aspergit_bold"
                            android:gravity="center"
                            android:text="@string/storeLocationstr"
                            android:textColor="#ffc107"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/locationNext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_next"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/offersCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightBtn"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_sale"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/aspergit_bold"
                            android:gravity="center"
                            android:text="@string/offersStr"
                            android:textColor="#ffc107"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_next"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aspergit_bold"
                            android:text="@string/StoreBio"
                            android:textColor="@color/material_blue_grey_95"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/bioTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:gravity="start|top"
                            android:inputType="textMultiLine"
                            android:maxLength="60" />

                        <Button
                            android:id="@+id/saveBtn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/editTextHeightLow"
                            android:background="@drawable/btn_selector"
                            android:fontFamily="@font/aspergit_bold"
                            android:text="@string/saveStr"
                            android:textColor="@color/quantum_white_text" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>